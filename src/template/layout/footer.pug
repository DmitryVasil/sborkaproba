mixin footer()
    +b('footer').footer
        .b-container
            +e('h2').title Contacts
            +e('p').text Want to know more or just chat?
            +e('p').text You are welcome!
            +e('button').button Send message
            +e.social
                +e('a').link(href="#")
                    +e('picture').picture
                        +e('img').image(src="../../images/content/linkedIn.svg", alt="")
                +e('a').link(href="#")
                    +e('picture').picture
                        +e('img').image(src="../../images/content/instagram.svg", alt="")
                +e('a').link(href="#")
                    +e('picture').picture
                        +e('img').image(src="../../images/content/behance.svg", alt="")
                +e('a').link(href="#")
                    +e('picture').picture
                        +e('img').image(src="../../images/content/dribble.svg", alt="")
            +e('p').text--small Like me on
            +e('p').text--small LinkedIn, Instagram, Behance, Dribble